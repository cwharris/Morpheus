set -ex

COMPOSE_FILE="${MORPHEUS_ROOT}/.devcontainer/docker-compose.yml"

export DSN=postgres://hydra:secret@hydra-postgres:5432/hydra?sslmode=disable

# Shut down prior runs so we can start them up in order
docker compose -f $COMPOSE_FILE \
    down \
        hydra \
        hydra-login \
        hydra-postgres

# Migrate Postgres
docker compose -f $COMPOSE_FILE \
    run \
        hydra migrate sql --yes $DSN

# start up hydra in order
docker compose -f $COMPOSE_FILE \
    up -d \
        hydra-login

docker compose -f $COMPOSE_FILE \
    run --rm -it hydra-cli


# cat /etc/hydra/client-broker.json | hydra import oauth2-client
